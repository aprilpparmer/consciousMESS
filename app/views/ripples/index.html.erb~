<h1>Listing ripples</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Username url</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ripples.each do |ripple| %> 
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <% if ripple.username_url %>
          <td><%= link_to ripple.username, ripple.username_url %></td>
        <% else %>
          <td><%= ripple.username %>
        <% end %>
        <td><%= ripple.message %></td>
	<td><%= ripple.created_at %></td>
        <td><%= link_to 'Show', ripple %></td>
        <td><%= link_to 'Edit', edit_ripple_path(ripple) %></td>
        <td><%= link_to 'Destroy', ripple, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

